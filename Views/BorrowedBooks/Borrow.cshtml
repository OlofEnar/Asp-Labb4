@model Asp_Labb4.Models.BorrowedBook

@{
    ViewData["Title"] = "Borrow";
}

<h1>Borrow</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Borrow">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="FkCustomerId" class="control-label">Customer</label>
                <select asp-for="FkCustomerId" class="form-control" asp-items="ViewBag.FkCustomerId"></select>
            </div>
            <div class="form-group mb-4">
                <label asp-for="FkBookId" class="control-label">Book</label>
                <select asp-for="FkBookId" class="form-control" asp-items="ViewBag.FkBookId"></select>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Borrow" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}